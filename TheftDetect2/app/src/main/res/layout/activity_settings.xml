<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="karouie.theftdetect.Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:id="@+id/txt_addEmail"
            android:hint="new email"
            android:singleLine="false"
            android:selectAllOnFocus="false"
            android:fontFamily="sans-serif"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btn_emailAdd" />

        <Button
            android:text="add email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_emailAdd"
            android:elevation="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txt_addEmail"
            android:layout_alignBottom="@+id/txt_addEmail"
            android:onClick="addEmail" />

        <CheckBox
            android:text="GPS Profiling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
            android:textAlignment="center"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:checked="false"
            android:duplicateParentState="false"
            android:layout_below="@+id/checkBox2"
            android:layout_alignEnd="@+id/checkBox2" />

        <CheckBox
            android:text="Facial Recognition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox4"
            android:textAlignment="center"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:checked="false"
            android:duplicateParentState="false"
            android:layout_below="@+id/checkBox3"
            android:layout_alignEnd="@+id/checkBox3" />

        <CheckBox
            android:text="Accelerometer Profiling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:textAlignment="center"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:checked="false"
            android:duplicateParentState="false"
            android:layout_marginTop="77dp"
            android:layout_below="@+id/txt_addEmail"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spnr_emails"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_addEmail"
            android:text="Button"
            android:layout_alignBottom="@+id/btn_removeEmail"
            android:layout_toStartOf="@+id/btn_removeEmail" />

        <Button
            android:text="Remove Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_removeEmail"
            android:layout_below="@+id/btn_emailAdd"
            android:layout_alignParentEnd="true"
            android:onClick="removeEmail" />

    </RelativeLayout>
</RelativeLayout>
