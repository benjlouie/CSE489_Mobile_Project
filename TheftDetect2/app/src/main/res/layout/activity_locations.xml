<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_locations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="karouie.theftdetect.Locations">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_latitude"
        android:hint="Latitude" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:layout_below="@+id/txt_latitude"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_longitude"
        android:hint="Longitude" />

    <Button
        android:text="Add Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/btn_addLocation"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txt_latitude"
        android:layout_above="@+id/txt_longitude"
        android:onClick="addLocation" />

    <Button
        android:text="Remove Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_removeLocation"
        android:layout_below="@+id/btn_addLocation"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txt_latitude"
        android:layout_alignBottom="@+id/txt_longitude"
        android:textSize="12sp"
        android:onClick="removeLocation" />

    <TextView
        android:text="Locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_locationList"
        android:layout_below="@+id/txt_longitude"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_lon1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp"
        android:hint="long 1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_lat2"
        android:layout_above="@+id/txt_lon1"
        android:layout_alignParentStart="true"
        android:hint="lat 2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_lat1"
        android:layout_above="@+id/txt_lat2"
        android:layout_alignParentStart="true"
        android:hint="lat 1" />

    <Button
        android:text="Get Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_rangeQuery"
        android:layout_alignTop="@+id/txt_lon2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txt_lon2"
        android:onClick="getPoints" />

    <TextView
        android:text="result locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_lat1"
        android:id="@+id/txtv_resultList"
        android:layout_alignBottom="@+id/txt_lon1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txt_lon2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_lon2"
        android:hint="long 2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
