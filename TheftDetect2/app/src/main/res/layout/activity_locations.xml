<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_locations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="karouie.theftdetect.Locations">

    <TextView
        android:text="Locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_locationList"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:text="Locations Outside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_locationOutsideList"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="selected  point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/txtv_pointWasMe"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_" />

    <Button
        android:text="This Was Me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_pointWasMe"
        android:onClick="thisWasMe"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/txtv_pointWasMe"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
